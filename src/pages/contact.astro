---
import Layout from "~/layouts/PageLayout.astro";
import HeroText from "~/components/widgets/HeroText.astro";
import ContactUs from "~/components/widgets/Contact.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Content from "~/components/widgets/Content.astro";
import Image from "~/components/common/Image.astro";

import contactTitle from "~/assets/images/contact-title.png";
import contactBar from "~/assets/images/lines/contact-bar.png";
import Button from "~/components/ui/Button.astro";

const metadata = {
  title: "Contact",
};
---

<Layout metadata={metadata}>
  <div id="header" class="flex flex-col flex-shrink-0 items-center">
    <div class="contact-bg h-[273px] w-[1440px] flex">
      <Image
        src={contactTitle}
        alt="Get In Touch"
        width="692px"
        height="71px"
        class="mt-[136px] mx-auto"
      />
    </div>
  </div>

  <div
    id="form-container"
    class="bg-contact-form h-[981px] w-[1440px] m-auto font-serif"
  >
    <div class="flex justify-center">
      <h1 class="w-[815px] contact-subtitle font-serif mt-[71px]">
        Fill out the contact form below for inquiries, partnership
        opportunities, and/or customer support!
      </h1>
    </div>

    <div id="form" class="flex justify-center mt-[71px]" style="">
      <div class="bg-white rounded-md w-[710px] p-[65px] contact-form">
        <form>
          <div id="textinputs">
            <div class="flex mb-[45px]">
              <div>
                <label for="FirstName" class="contact-label">
                  First Name
                </label>
                <input
                  type="text"
                  name="FirstName"
                  class="border-b-2 border-gray-300 w-[278px] mr-[39px] contact-input"
                />
              </div>
              <div>
                <label for="LastName" class="contact-label"> Last Name </label>
                <input
                  type="text"
                  name="LastName"
                  class="border-b-2 border-gray-300 w-[278px] mr-[39px] contact-input"
                />
              </div>
            </div>
            <div class="flex mb-[45px]">
              <div>
                <label for="Email" class="contact-label"> Email </label>
                <input
                  type="text"
                  name="Email"
                  class="border-b-2 border-gray-300 w-[278px] mr-[39px] contact-input"
                />
              </div>
              <div>
                <label for="PhoneNumber" class="contact-label">
                  Phone Number
                </label>
                <input
                  type="text"
                  name="PhoneNumber"
                  class="border-b-2 border-gray-300 w-[278px] mr-[39px] contact-input"
                />
              </div>
            </div>
          </div>

          <div id="subject-select" class="mt-4 mb-[45px]">
            <label for="subject" class="contact-label"> Select Subject </label>

            <div id="radio-buttons" class="flex mt-[14.63px]">
              {
                [
                  "General Inquiry",
                  "Partnerships",
                  "Customer Support",
                  "Other",
                ].map((subject) => (
                  <>
                    <input
                      type="radio"
                      id={subject.toLowerCase().replace(/\s/g, "-")}
                      name="subject"
                      value={subject.toLowerCase().replace(/\s/g, "-")}
                      class="mr-[10px]"
                    />
                    <label
                      for={subject.toLowerCase().replace(/\s/g, "-")}
                      class="text-sm mr-[17px]"
                    >
                      {subject}
                    </label>
                  </>
                ))
              }
            </div>
          </div>

          <div class="flex flex-col my-[45px]">
            <label for="message" class="contact-label"> Message </label>
            <input
              type="text"
              name="message"
              id="message"
              placeholder="Write your message..."
              class="border-b-2 border-gray-300 w-[595px] contact-input pb-[10px] placeholder-[#BDBDBD]"
            />
          </div>

          <div class="flex justify-end mb-[88px]">
            <button type="submit" class="contact-btn font-serif"
              >SEND MESSAGE</button
            >
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout>
