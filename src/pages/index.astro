---
import Layout from "~/layouts/PageLayout.astro";

import Image from "~/components/common/Image.astro";
import Button from "~/components/ui/Button.astro";

import title from "~/assets/images/munch-home-title.png";
import dark from "~/assets/images/lines/dark.png";
import light from "~/assets/images/lines/light.png";
import homegroup from "~/assets/images/home-image-group.png";
import accessibility from "~/assets/images/accessibility.png";
import intelligence from "~/assets/images/intelligence.png";
import consistency from "~/assets/images/consistency.png";
import modularity from "~/assets/images/modularity.png";
import whitebar from "~/assets/images/white-bar.png";
import ourproducts from "~/assets/images/our-products.png";
import boba from "~/assets/images/boba.png";
import dumpling from "~/assets/images/dumpling.png";
import smoothie from "~/assets/images/smoothie.png";
import threedots from "~/assets/images/three-dots.png";
import orblelogo from "~/assets/images/orble-logo.png";
import orblemachine from "~/assets/images/orble-machine.png";
import bobagroup from "~/assets/images/boba-group.png";
import classic from "~/assets/images/classic-tea-design.png";
import threebobas from "~/assets/images/three-bobas.png";
import dumplingdesign from "~/assets/images/dumpling-design.png";
import smoothiedesign from "~/assets/images/smoothie-design.png";
import whymunch from "~/assets/images/why-munch.png";
import quotebg from "~/assets/images/quote-bg.png";
import quotebar from "~/assets/images/quote-bar.png";

const metadata = {
  title: "Munch Industries - Home",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <div class="home-bg h-auto py-10">
    <div
      class="ml-[10%] flex items-center justify-center lg:justify-start"
      style="max-width: 80%; height: auto; padding-bottom: 50px; padding-top: 40px"
    >
      <Image src={title} alt="Munch Industries Logo" width={900} />
    </div>
    <div
      class="ml-[10%] flex justify-center lg:justify-start"
      style="max-width: 60%; height: auto; padding-top: 20px;"
    >
      <Image src={dark} alt="bar" width={70} />
      <div
        class="flex justify-center lg:justify-start"
        style="max-width: 60%; height: auto; padding-left: 20px;"
      >
        <Image src={light} alt="bar" width={220} />
      </div>
    </div>

    <div class="grid font-serif max-lg:flex max-lg:flex-col">
      <div class="left self-center lg:self-end">
        <h1
          class="munch-blue leading-tighter font-weight-light mb-1 font-heading dark:text-gray-200 md:text-4.5xl"
          style="line-height:1.5"
        >
          Intelligent, modular <br />
          <span class="font-bold">food automation at scale.</span>
        </h1>
      </div>
      <div class="right flex justify-center lg:justify-end">
        <Image src={homegroup} alt="Food Images" width={500} />
      </div>
      <div class="left2">
        <h5
          class="text-center text-xl tracking-normal dark:text-slate-400 lg:text-left"
        >
          Tailored for culinary excellence and convenience, <br /> Munch offers revolutionary
          food automation solutions.
        </h5>
      </div>
      <div class="right2 mt-[3%] flex justify-center lg:justify-end">
        <style>
          .dark-button-class {
            background-color: #214260;
            color: white;
            text-decoration: none;
            font-weight: s bold;
          }
        </style>
        <form action="/#products">
          <Button
            text="LEARN MORE"
            class="munch-btn bg-[#214260] font-serif font-bold"
            type="submit"
          />
        </form>
      </div>
    </div>
  </div>

  <!-- Part 2 -->
  <div
    class="home-two-bg h-auto font-serif font-light max-lg:bg-[#214261] max-lg:bg-none lg:h-[700px]"
  >
    <div class="h-[5px] w-full bg-black lg:hidden"></div>
    <div
      class="fourbyonegrid mx-auto mb-10 pt-20 max-lg:grid-cols-2 max-sm:grid-cols-1"
    >
      <div
        class="flex flex-col items-center justify-center transition-all duration-500 hover:scale-110"
      >
        <div
          class="flex items-center justify-center rounded-full bg-munch-blue"
          style="height: 150px; width: 150px"
        >
          <Image
            src={accessibility}
            alt="Accessibility Icon"
            width={80}
            style="justify-center"
          />
        </div>
        <h5 class="mb-10 mt-10 text-3xl tracking-normal text-slate-100">
          Accessibility
        </h5>
        <Image
          src={whitebar}
          alt="Bar"
          width={80}
          class="hidden justify-center lg:block"
        />
      </div>
      <div
        class="flex flex-col items-center justify-center transition-all duration-500 hover:scale-110"
      >
        <div
          class="flex items-center justify-center rounded-full bg-munch-blue"
          style="height: 150px; width: 150px"
        >
          <Image
            src={intelligence}
            alt="Intelligence Icon"
            width={80}
            style="justify-center"
          />
        </div>
        <h5 class="mb-10 mt-10 text-3xl tracking-normal text-slate-100">
          Intelligence
        </h5>
        <Image
          src={whitebar}
          alt="Bar"
          width={80}
          class="hidden justify-center lg:block"
        />
      </div>
      <div
        class="flex flex-col items-center justify-center transition-all duration-500 hover:scale-110"
      >
        <div
          class="flex items-center justify-center rounded-full bg-munch-blue"
          style="height: 150px; width: 150px"
        >
          <Image
            src={consistency}
            alt="Consistency Icon"
            width={80}
            style="justify-center"
          />
        </div>
        <h5 class="mb-10 mt-10 text-3xl tracking-normal text-slate-100">
          Consistency
        </h5>
        <Image
          src={whitebar}
          alt="Bar"
          width={80}
          class="hidden justify-center lg:block"
        />
      </div>
      <div
        class="flex flex-col items-center justify-center transition-all duration-500 hover:scale-110"
      >
        <div
          class="flex items-center justify-center rounded-full bg-munch-blue"
          style="height: 150px; width: 150px"
        >
          <Image
            src={modularity}
            alt="Modularity Icon"
            width={80}
            style="justify-center"
          />
        </div>
        <h5 class="mb-10 mt-10 text-3xl tracking-normal text-slate-100">
          Modularity
        </h5>
        <Image
          src={whitebar}
          alt="Bar"
          width={80}
          class="hidden justify-center lg:block"
        />
      </div>
    </div>
    <div class="flex justify-center pb-5 sm:mt-20">
      <form action="/about">
        <Button
          id="products"
          text="READ MORE"
          class="munch-btn mb-10 justify-center bg-[#ACC6DD] font-bold"
          type="submit"
        />
      </form>
    </div>
  </div>

  <!-- Part 3 -->
  <div class="home-three-bg mt-10 font-serif max-lg:bg-none">
    <div
      class="border-b-8 border-black bg-white lg:border-opacity-0 lg:bg-transparent"
    >
      <div
        class="ml-[10%] flex items-center justify-start pb-5"
        style="max-width: 80%; height: auto;"
      >
        <Image src={ourproducts} alt="Our Products" width={450} />
      </div>
      <div
        class="ml-[10%] flex justify-start"
        style="max-width: 60%; height: auto; padding-top: 20px;"
      >
        <Image src={dark} alt="bar" width={70} />
      </div>
      <div class="threebyone max-lg:grid-cols-1">
        <div class="flex flex-col">
          <Image src={boba} alt="Boba Icon" width={80} />
          <div>
            <h3
              class="mt-5 text-3xl font-light tracking-normal text-munch-blue"
            >
              bubble tea machine
            </h3>
            <h3
              class="mb-10 text-3xl font-semibold tracking-normal text-munch-blue underline"
            >
              <a href="/orble-tea">Orble</a>
            </h3>
          </div>
        </div>
        <div class="flex flex-col">
          <Image src={dumpling} alt="Dumpling Icon" width={80} />
          <div>
            <h3
              class="mt-5 text-3xl font-light tracking-normal text-munch-blue"
            >
              dumpling machine
            </h3>
            <h3
              class="mb-10 text-3xl font-semibold tracking-normal text-munch-blue"
            >
              incoming
            </h3>
          </div>
        </div>
        <div class="mb-14 flex flex-col">
          <Image src={smoothie} alt="Smoothie Icon" width={80} />
          <div>
            <h3
              class="mt-5 text-3xl font-light tracking-normal text-munch-blue"
            >
              smoothie machine
            </h3>
            <h3
              class="mb-10 text-3xl font-semibold tracking-normal text-munch-blue"
            >
              incoming
            </h3>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-[#fff9ef] py-24 lg:bg-transparent lg:pt-40">
      <div class="flex justify-center">
        <h3 class="text-center text-3xl tracking-normal text-munch-blue">
          Break into the growing bubble tea market with
        </h3>
      </div>
      <div class="mt-8 flex justify-center">
        <Image src={threedots} alt="Three Dots" width={70} height={13} />
      </div>
      <div class="fourbytwogrid max-lg:grid-cols-1 lg:mt-12">
        <div class="col-span-1 row-span-2 h-auto">
          <Image
            src={orblemachine}
            alt="Orble Machine"
            width={400}
            class="mx-auto"
          />
        </div>
        <div class="col-span-2 row-span-1">
          <Image src={orblelogo} alt="Orble Logo" width={600} class="mx-auto" />
          <h3 class="text-center text-3xl tracking-normal text-munch-blue">
            a fully au<span class="mr-1 font-bold italic">tea</span>matic boba
            machine
          </h3>
        </div>
        <div class="col-span-1 row-span-1 flex justify-center">
          <Image src={classic} alt="Classic Milk Tea" width={150} />
        </div>
        <div class="col-span-2 row-span-1 flex flex-row justify-center">
          <div class="absolute z-10 mt-8">
            <a href="/orble-tea">
              <Button
                text="LEARN MORE"
                type="submit"
                class="munch-btn flex justify-center bg-beige text-3xl font-bold no-underline hover:no-underline"
              />
            </a>
          </div>
          <div class="relative flex justify-center">
            <Image src={bobagroup} alt="Boba Design" />
          </div>
        </div>
        <div class="col-span-1 row-span-1 mx-auto w-auto max-w-[300px]">
          <Image src={threebobas} alt="Three Bobas" />
        </div>
      </div>
    </div>

    <div
      class="border-y-4 border-black bg-[#acc6dd] py-10 lg:border-none lg:bg-transparent"
    >
      <!-- Part 4 -->
      <div class="fourbyonegrid lg:pt-40">
        <div class="col-span-1 row-span-1 lg:-mt-32">
          <Image src={dumplingdesign} alt="Dumpling Design" width={330} />
        </div>
        <div class="col-span-3 row-span-1 lg:-mt-16 xl:mt-16">
          <h3 class="flex text-5xl tracking-normal text-munch-blue">
            dumpling machine
          </h3>
          <h3 class="text-3xl font-bold tracking-normal text-munch-blue">
            incoming
          </h3>
        </div>
      </div>
    </div>

    <div
      class="border-b-4 border-black bg-white py-10 lg:border-none lg:bg-transparent"
    >
      <!-- Part 5 -->
      <div class="fourbyonegrid">
        <div class="col-span-3 row-span-1 lg:mt-10 xl:mt-20">
          <h3 class="text-right text-5xl tracking-normal text-munch-blue">
            smoothie machine
          </h3>
          <h3
            class="text-right text-3xl font-bold tracking-normal text-munch-blue"
          >
            incoming
          </h3>
        </div>
        <div class="col-span-1 row-span-1">
          <Image src={smoothiedesign} alt="Smoothie Design" width={330} />
        </div>
      </div>
    </div>

    <style>
      .quote {
        font-size: 0.8rem;
        line-height: 17px;
      }

      @media (min-width: 374px) {
        .quote {
          font-size: 0.9rem;
          line-height: 23px;
        }
      }

      @media (min-width: 400px) {
        .quote {
          font-size: 1.1rem;
          line-height: 23px;
        }
      }

      @media (min-width: 450px) {
        .quote {
          font-size: 1.5rem;
          line-height: 30px;
        }
      }

      @media (min-width: 1023px) {
        .quote {
          font-size: 0.7rem;
          line-height: 18px;
        }
      }

      @media (min-width: 1150px) {
        .quote {
          font-size: 0.9rem;
          line-height: 23px;
        }
      }

      @media (min-width: 1439px) {
        .quote {
          font-size: 1rem;
          line-height: 30px;
        }
      }
    </style>

    <div class="bg-[#214261] lg:bg-transparent">
      <!-- Part 6 -->
      <div
        class="mx-auto w-[300px] pt-14 md:w-[400px] lg:ml-[47%] lg:pt-44 xl:w-[500px]"
      >
        <Image src={whymunch} alt="Why Munch?" />
      </div>
      <div class="threebyoneequalmargins mt-16 font-serif max-lg:grid-cols-1">
        <div class="relative mx-auto">
          <Image src={quotebg} alt="Quote Box" width={450} />
          <div class="absolute left-6 top-6 w-[70%] text-white">
            <h1 class="quote">
              “As a beta tester for Munch Industries, I've had the opportunity
              to witness firsthand the potential of their innovative products.
              Their dedication to pushing boundaries and refining their
              solutions is evident in every interaction. I'm excited to see the
              impact they'll make in the industry.”
            </h1>
          </div>
          <div
            class="absolute bottom-14 right-16 w-[70%] text-right font-bold text-white sm:right-20 lg:right-14 xl:right-20"
          >
            <h1 class="text-sm sm:text-xl lg:text-sm xl:text-base">
              Hanna Johnson, <br />Culinary Tech Enthusiast
            </h1>
          </div>
        </div>
        <div class="relative mx-auto">
          <Image src={quotebg} alt="Quote Box" width={450} />
          <div class="absolute left-6 top-6 w-[70%] text-white">
            <h1 class="quote">
              “Partnering with Munch Industries has been an inspiring journey.
              Their passion for revolutionizing the food automation industry is
              contagious. I have no doubt that their future customers will
              benefit greatly from their cutting-edge solutions.”
            </h1>
          </div>
          <div
            class="absolute bottom-14 right-16 w-[70%] text-right font-bold text-white sm:right-20 lg:right-14 xl:right-20"
          >
            <h1 class="text-sm sm:text-xl lg:text-sm xl:text-base">
              Ethan Wilson, <br />Food Automation Consultant
            </h1>
          </div>
        </div>
        <div class="relative mx-auto">
          <Image src={quotebg} alt="Quote Box" width={450} />
          <div class="absolute left-6 top-6 w-[70%] text-white">
            <h1 class="quote">
              “Munch Industries’ vision for the future of food automation is
              both ambitious and promising. Having collaborated with their team
              on several projects, I've been consistently impressed by their
              innovative approach and attention to detail. I'm eager to see
              their products in action and witness the impact they'll have.”
            </h1>
          </div>
          <div
            class="absolute bottom-14 right-16 w-[70%] text-right font-bold text-white sm:right-20 lg:right-14 xl:right-20"
          >
            <h1 class="text-sm sm:text-xl lg:text-sm xl:text-base">
              Daniel Martinez, <br />Industry Expert
            </h1>
          </div>
        </div>
      </div>
      <div class="ml-[10%] mt-12 pb-12">
        <Image src={quotebar} alt="Bar Design" width={700} />
      </div>
    </div>
  </div>
</Layout>
