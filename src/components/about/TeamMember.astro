---
import Image from "../common/Image.astro";

const props = Astro.props;
---

<div class="team-info flex flex-col items-center text-center font-serif">
  <Image
    src={props.image}
    alt={props.name}
    width="200vw"
    height="200vw"
    class="rounded-full"
  />
  <p class="mt-[31px] text-[24px] font-normal">{props.name}</p>
  <p class="mt-[11px] text-[28px] font-bold italic">{props.title}</p>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="21"
    height="2"
    viewBox="0 0 21 2"
    fill="none"
    class="mt-[12px]"
  >
    <path d="M1 1H20" stroke="black" stroke-width="2" stroke-linecap="round"
    ></path>
  </svg>
  <p class="mt-[12px] text-[18px]">{props.bio}</p>
</div>
