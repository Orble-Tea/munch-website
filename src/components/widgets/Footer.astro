---
import { Icon } from "astro-icon/components";
import { SITE } from "~/utils/config";
import { getHomePermalink } from "~/utils/permalinks";
import Logo from "~/components/Logo.astro";
import Image from "~/components/common/Image.astro";
import fb from "~/assets/images/fb.png";
import ig from "~/assets/images/ig.png";
import Button from "~/components/ui/Button.astro";

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const {
  socialLinks = [],
  secondaryLinks = [],
  links = [],
  footNote = "",
  theme = "light",
} = Astro.props;
---

<footer class:list={[{ dark: theme === "dark" }, "relative not-prose"]}>
  
  <div class="w-full h-[4px] bg-black"></div>

  <div class="threebyone  font-serif max-sm:grid-cols-1">
    <div class="max-sm:mx-auto">
      <a href={getHomePermalink()}>
        <Logo />
      </a>
    </div>
    <div
      class="col-span-2 flex items-center sm:justify-end h-[10%] text-xl font-bold text-black max-sm:flex-col mx-auto mb-8 sm:flex-wrap"
    >
      <a
        href="/"
        class="no-underline hover:bg-gray-100 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg p-8 inline-flex items-center"
      >
        Home</a
      >
      <a
        href="/#products"
        class="no-underline hover:bg-gray-100 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg p-8 inline-flex items-center"
      >
        Products</a
      >
      <a
        href="/about"
        class="no-underline hover:bg-gray-100 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg p-8 inline-flex items-center"
      >
        About Us</a
      >
      <a href="mailto:info@orble-tea.com"
        ><Button
          text="CONTACT"
          class="contact-btn w-[161px] flex justify-center items-center text-2xl font-bold bg-[#214260]"
          type="submit"
        /></a
      >
    </div>
    <div class="inline-flex gap-6 max-sm:mx-auto my-8">
      <Image src={ig} alt="Instagram" width={40} />
      <Image src={fb} alt="Facebook" width={40} />
    </div>
    <div></div>
    <div class="text-gray-800 flex justify-end items-center max-sm:mx-auto">
      <div class="flex flex-col">
        Copyright 2024 @ Munch Industries<br /><a
          href="mailto:info@orble-tea.com"
          class="text-center sm:text-right">info@orble-tea.com</a
        >
      </div>
    </div>
  </div>
</footer>
