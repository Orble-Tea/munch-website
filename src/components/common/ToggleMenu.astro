---
export interface Props {
  label?: string;
  class?: string;
}

const {
  label = 'Toggle Menu',
  class:
    className = "flex flex-col h-12 w-12 rounded justify-center items-center cursor-pointer group z-50",
} = Astro.props;
---

<button
  class={className}
  aria-label={label}
  data-aw-toggle-menu
>
  <span class="sr-only">{label}</span>
  <slot>
    <span
      aria-hidden="true"
      class="h-0.5 w-6 my-1 rounded-full bg-black dark:bg-white transition ease transform duration-200 opacity-80 group-[.expanded]:rotate-45 group-[.expanded]:translate-y-2.5"
    ></span>
    <span
      aria-hidden="true"
      class="h-0.5 w-6 my-1 rounded-full bg-black dark:bg-white transition ease transform duration-200 opacity-80 group-[.expanded]:opacity-0"
    ></span>
    <span
      aria-hidden="true"
      class="h-0.5 w-6 my-1 rounded-full bg-black dark:bg-white transition ease transform duration-200 opacity-80 group-[.expanded]:-rotate-45 group-[.expanded]:-translate-y-2.5"
    ></span>
  </slot>
</button>

<div 
  id="links" 
  class="hidden fixed inset-0 top-0 left-0 z-40 backdrop-blur-lg bg-slate-200 bg-opacity-95 dark:bg-slate-900 dark:bg-opacity-95"
>
  <nav class="flex flex-col items-center justify-start h-full text-lg sm:text-xl lg:text-2xl font-serif gap-4 sm:gap-5 lg:gap-6 px-4 pt-24 sm:pt-32">
    <a href="/" class="no-underline hover:text-[#214260] transition-colors">HOME</a>
    <a href="/about" class="no-underline hover:text-[#214260] transition-colors">ABOUT</a>
    <a href="/contact" class="no-underline hover:text-[#214260] transition-colors">CONTACT</a>
    
    <div class="w-16 h-0.5 bg-gray-300 my-2"></div>
    
    <a href="/orble-tea" class="no-underline hover:text-[#214260] transition-colors">ORBLE TEA</a>
    <a href="/smoothie" class="no-underline hover:text-[#214260] transition-colors">SMOOTHIE MACHINE</a>
    <a href="/dumpling" class="no-underline hover:text-[#214260] transition-colors">DUMPLING MACHINE</a>
  </nav>
</div>

<script>
  let expanded = false;

  function toggleMenu() {
    expanded = !expanded;
    const menuButton = document.querySelector('[data-aw-toggle-menu]')!;
    const links = document.getElementById('links')!;
    
    menuButton.classList.toggle('expanded', expanded);
    links.classList.toggle('hidden', !expanded);
    
    // Prevent body scroll when menu is open
    document.body.style.overflow = expanded ? 'hidden' : '';
  }

  function closeMenu() {
    if (expanded) {
      toggleMenu();
    }
  }

  // Toggle menu on button click
  document.addEventListener('click', (event) => {
    const target = event.target as HTMLElement;
    if (target.closest('[data-aw-toggle-menu]')) {
      event.preventDefault();
      event.stopPropagation();
      toggleMenu();
    }
  });

  // Close menu when clicking on links
  document.addEventListener('click', (event) => {
    const target = event.target as HTMLElement;
    const links = document.getElementById('links');
    if (links && target.tagName === 'A' && links.contains(target)) {
      closeMenu();
    }
  });
</script>

<style>
  #links {
    transition: opacity 0.3s ease-in-out;
  }

  #links.hidden {
    opacity: 0;
    pointer-events: none;
  }

  #links:not(.hidden) {
    opacity: 1;
    pointer-events: auto;
  }
</style>